                <a class="navbar-brand" href="{{ path('homepage') }}">People Network</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="{{ path('homepage') }}">User Home <span class="sr-only">(current)</span></a></li>
                    <li><a href="{{ path('admin_dashboard') }}">Admin Home</a></li>
